{
  // "parser": "babel-eslint",
  "extends": [
    "plugin:vue/essential",
    "standard"
  ],
  "root": true,
  "plugins": [
    "html"
  ],
  "parserOptions": {
    "sourceType": "module",
    "parser": "babel-eslint"
  },
  "globals": {
    "$": false
  },
  "rules": {
    "arrow-parens": 0,
    "semi": [2, "never"],
    "max-len": [2, 300, 2],
    "generator-star-spacing": 0,
    "space-before-function-paren": 0,
    "padded-blocks": 0
  }
}
